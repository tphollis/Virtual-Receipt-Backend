{
  "swagger": "2.0",
  "info": {
    "title": "Receipt API",
    "description": "Receipt Project",
    "version": "1.0.0"
  },
  "host": "https://virtual-receipts.herokuapp.com/",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "tags": [
    {
      "name": "users",
      "description": "A list of all the requests that partains to users in the database."
    },
    {
      "name": "receipts",
      "description": "A list of all the requests that partains to recipts in the database."
    }
  ],
  "paths": {
    "/user/{usrname}": {
      "get": {
        "tags": ["users"],
        "description": "Get a single user by searching for their username.",
        "parameters": [
          {
            "name": "usrname",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "retrieved"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["users"],
        "description": "sends user to auth0 login page to either login or create a new account."
      }
    },
    "/receipt/{usrId}": {
      "get": {
        "tags": ["receipts"],
        "description": "Grabs all receipt information for a specified user. To display the reciept image, use img src=\"data:image/jpeg;base64,BASE64_STRING\"",
        "parameters": [
          {
            "name": "usrId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "list of receipt information."
          },
          "500": {
            "description":"Internal Server Error"
          }
        }
      }
    },
    "/receipt/find/{usrId}&{field}&{value}": {
      "get": {
        "tags": ["receipts"],
        "description": "Get a single receipt based on the user is looking for. The available fields are: date, total, store, city, state, and purchase_type. To display the image, use img src=\"data:image/jpeg;base64,BASE64_STRING\"",
        "parameters": [
          {
            "name": "usrId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "field",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "value",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "data on the receipt(s) that fit the request."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/receipt/range/{usrId}&{date1}&{date2}": {
      "get": {
        "tags": ["receipts"],
        "description": "Get a list of receipts within a time range. Make sure the date is in yyy-mm-dd format.",
        "parameters": [
          {
            "name": "usrId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "date1",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "date2",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "data on the receipt(s) that fit the request."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/receipt/": {
      "post": {
        "tags": ["receipts"],
        "description": "Adds a receipt to the database under a users id. Image will need to be saved as a base64. Please see https://stackoverflow.com/questions/17710147/image-convert-to-base64 to see how to convert an image to base64.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "user_id": {
                  "example": "string"
                },
                "date": {
                  "example": "2010-04-29"
                },
                "total": {
                  "example": 75.38
                },
                "store": {
                  "example": "walmart"
                },
                "city": {
                  "example": "denver"
                },
                "state": {
                  "example": "colorado"
                },
                "purchase_type": {
                  "example": "groceries"
                },
                "image": {
                  "example": "image base64"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/receipt/{id}": {
      "put": {
        "tags": ["receipts"],
        "description": "Allows any changes to be made for a single receipt. All fields must be filled in. You may want to hide the field for the username id.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "user_id":{
                  "example": "string"
                },
                "date": {
                  "example": "2022-12-29"
                },
                "total": {
                  "example": 45.38
                },
                "store": {
                  "example": "maverick"
                },
                "city": {
                  "example": "rexburg"
                },
                "state": {
                  "example": "idaho"
                },
                "purchase_type": {
                  "example": "gass"
                },
                "image": {
                  "example": "image base64"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Edits Sucessfully Made"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": ["receipts"],
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "deleted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
