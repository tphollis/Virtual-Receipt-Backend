{
  "swagger": "2.0",
  "info": {
    "title": "Receipt API",
    "description": "Receipt Project",
    "version": "1.0.0"
  },
  "host": "virtual-receipts.herokuapp.com",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "tags": [
    {
      "name": "users",
      "description": "A list of all the requests that partains to users in the database."
    },
    {
      "name": "receipts",
      "description": "A list of all the requests that partains to recipts in the database."
    }
  ],
  "paths": {
    "/user/{usrname}": {
      "get": {
        "tags": ["users"],
        "description": "Get a single user by searching for their username.",
        "parameters": [
          {
            "name": "usrname",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "retrieved"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/": {
      "post": {
        "tags": ["users"],
        "description": "Creates a new user into the database. Privilage is how much access to the webpage the user has.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "example": "string: johndoe56"
                },
                "password": {
                  "example": "string: P@55word"
                },
                "email": {
                  "example": "string: john.doe@email.com"
                },
                "privelage": {
                  "example": "int32: 1"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/{id}": {
      "delete": {
        "tags": ["users"],
        "description": "Deletes a specified user from the database.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "deleted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/receipt/{usrId}": {
      "get": {
        "tags": ["receipts"],
        "description": "Grabs all receipt information for a specified user. To display the reciept image, use img src=\"data:image/jpeg;base64,BASE64_STRING\"",
        "parameters": [
          {
            "name": "usrId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "list of receipt information."
          },
          "500": {
            "description":"Internal Server Error"
          }
        }
      },
      "post": {
        "tags": ["receipts"],
        "description": "Adds a receipt to the database under a users id. Image will need to be saved as a base64. Please see https://stackoverflow.com/questions/17710147/image-convert-to-base64 to see how to convert an image to base64.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "user_id": {
                  "example": "string"
                },
                "date": {
                  "example": "date format year-month-day: 2022-01-30"
                },
                "total": {
                  "example": "decimal128: 75.38"
                },
                "store": {
                  "example": "string: Walmart"
                },
                "city": {
                  "example": "string: Denver"
                },
                "state": {
                  "example": "string: CO"
                },
                "purchase_type": {
                  "example": "Groceries"
                },
                "image": {
                  "example": "image base64"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/receipt/find/{field}&{value}": {
      "get": {
        "tags": ["receipts"],
        "description": "Get a single receipt based on the user is looking for. The available fields are: date, total, store, city, state, and purchase_type. To display the image, use img src=\"data:image/jpeg;base64,BASE64_STRING\"",
        "parameters": [
          {
            "name": "field",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "value",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "data on the receipt(s) that fit the request."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/receipt/range/{date1}&{date2}": {
      "get": {
        "tags": ["receipts"],
        "description": "",
        "parameters": [
          {
            "name": "date1",
            "in": "path",
            "required": true,
            "type": "date"
          },
          {
            "name": "date2",
            "in": "path",
            "required": true,
            "type": "date"
          }
        ],
        "responses": {
          "200": {
            "description": "data on the receipt(s) that fit the request."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/receipt/{id}": {
      "delete": {
        "tags": ["receipts"],
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "deleted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}