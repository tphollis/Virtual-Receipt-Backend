{
  "swagger": "2.0",
  "info": {
    "title": "Receipt API",
    "description": "Receipt Project",
    "version": "1.0.0"
  },
  "host": "virtual-receipts.herokuapp.com",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "tags": [
    {
      "name": "users",
      "description": "A list of all the requests that partains to users in the database."
    },
    {
      "name": "receipts",
      "description": "A list of all the requests that partains to recipts in the database."
    }
  ],
  "paths": {
    "/user/{username}": {
      "get": {
        "tags": ["users"],
        "description": "Get a single user by searching for their username.",
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "retrieved"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/": {
      "post": {
        "tags": ["users"],
        "description": "Creates a new user into the database.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "example": "any"
                },
                "password": {
                  "example": "any"
                },
                "email": {
                  "example": "any"
                },
                "privelage": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/{userId}": {
      "delete": {
        "tags": ["users"],
        "description": "Deletes a specified user from the database.",
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "deleted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/receipt/": {
      "get": {
        "tags": ["receipts"],
        "description": "Grabs all receipt information for a specified user.",
        "parameters": [
          {
            "name": "usrId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "list of receipt information."
          },
          "500": {
            "description":"Internal Server Error"
          }
        }
      },
      "post": {
        "tags": ["receipts"],
        "description": "Adds a receipt to the database under a users id.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "user_id": {
                  "example": "any"
                },
                "date": {
                  "example": "2022-01-01"
                },
                "total": {
                  "example": "15.31"
                },
                "store": {
                  "example": "Walmart"
                },
                "city": {
                  "example": "Rexburg"
                },
                "state": {
                  "example": "ID"
                },
                "purchase_type": {
                  "example": "Groceries"
                },
                "image": {
                  "example": "to be determined"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/receipt/{recptId}": {
      "get": {
        "tags": ["receipts"],
        "description": "Get a single receipt",
        "parameters": [
          {
            "name": "recptId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "data on the specified receipt."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/receipt/{date1,:date2}": {
      "get": {
        "tags": ["receipts"],
        "description": "",
        "parameters": [
          {
            "name": "date1",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "date2",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {}
      }
    },
    "/receipt/{id}": {
      "delete": {
        "tags": ["receipts"],
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "List of wanted receipts"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}